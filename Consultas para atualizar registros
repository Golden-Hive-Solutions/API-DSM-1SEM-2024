\\ Para atualizar as informações de um usuário na tabela tbUsuario:

UPDATE tbUsuario
SET nome = 'João Pereira', email = 'joaopereira@example.com'
WHERE id_usuario = 1;

\\ Para atualizar um certificado na tabela tbCertificado:

UPDATE tbCertificado
SET data_avaliacao = '2024-05-01 09:00:00', score = 95.00
WHERE id_usuario = 1;

\\ Para atualizar uma questão na tabela tbQuestao:

UPDATE tbQuestao
SET enunciado = '-O scrum master tem competência para cancelar uma sprint antes de o time-boxed da sprint terminar.?', resposta_correta = FALSE
WHERE id_questao = 1;

\\ Atualizar uma resposta de usuário para uma questão na tabela tbCertificadoQuestao

UPDATE tbCertificadoQuestao
SET resposta_usuario = TRUE
WHERE id_usuario = 1 AND id_questao = 2;

\\ Deletar um usuário específico na tabela tbUsuario e todos os registros relacionados:

DELETE FROM tbCertificadoQuestao WHERE id_usuario = 1;
DELETE FROM tbCertificado WHERE id_usuario = 1;
DELETE FROM tbUsuario WHERE id_usuario = 1;

\\ Deletar uma questão específica na tabela tbQuestao e todos os registros relacionados:

DELETE FROM tbCertificadoQuestao WHERE id_questao = 1;
DELETE FROM tbQuestao WHERE id_questao = 1;

\\ Verificar se os registros foram atualizados corretamente utilizando consultas:

SELECT * FROM tbUsuario WHERE id_usuario = 1;
SELECT * FROM tbCertificado WHERE id_usuario = 1;
SELECT * FROM tbQuestao WHERE id_questao = 1;
SELECT * FROM tbCertificadoQuestao WHERE id_usuario = 1 AND id_questao = 2;

